<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/_head") %>
  </head>
  <body>
    <%- include("partials/_header") %>
    <ul>
      <% for (let beer of beers) { %>

      <li>
        <a href=<%= `/beers/${beer.db_id}` %>><%= beer['name'] %></a>
        <br>
        Rating: <%= beer['rating'] %>
        <br>
        <%= beer['brewery'] %>
        <br>
        <%= beer['style'] %>
        <br>
        ABV: <%= beer['ABV'] %>
        <br>
        <%= beer['description'] %>
      </li>

      <% } %>
    </ul>

  </body>
</html>
